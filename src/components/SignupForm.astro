---
import Button from "./Button.astro";
---

<style>
  .signup__form {
    margin: 0 0 2rem 0;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 500px;
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .signup__form {
      max-width: 400px;
      gap: 0.5rem;
    }
  }
  
  @media (max-width: 480px) {
    .signup__form {
      max-width: 320px;
      gap: 0.5rem;
    }
  }
  
  @media (max-width: 375px) {
    .signup__form {
      max-width: 280px;
      gap: 0.4rem;
    }
  }

  input[type='text'],
  input[type='email'],
  input[type='date'],
  input[type='tel'] {
    flex: 1;
    padding: 0.5rem 1rem;
    border: 2px solid #ccc;
    color: #000000;
    border-radius: 2rem;
    outline-style: none;
    min-width: 0;
  }

  input::placeholder {
    font-size: 0.75em;
  }

  input:focus {
    border: 2px solid#000;
  }

  .signup__form :global(.btn) {
    flex-shrink: 0;
  }
</style>

<form class="signup__form fade-in" action="YOUR_MAILCHIMP_ACTION_URL" method="POST" target="_blank">
  <input type="email" name="EMAIL" placeholder="Email Address" required/>
  <!-- Hidden Mailchimp fields -->
  <div style="position: absolute; left: -5000px;" aria-hidden="true">
    <input type="text" name="b_YOUR_BOT_FIELD" tabindex="-1" value="">
  </div>
  <Button type="submit">Submit</Button>
</form>